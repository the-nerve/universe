{
  "name": "universe",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean:root": "rm -rf node_modules",
    "clean:reset": "turbo clean --parallel && turbo clean:root && pnpm install",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
