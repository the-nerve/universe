{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV", "GITHUB_TOKEN"],
  "tasks": {
    "_dependencies": {
      "dependsOn": [],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },

    "clean": {
      "cache": false
    },
    "//#clean:root": {
      "cache": false
    },

    "check:lint": {
      "dependsOn": ["^lint"]
    },
    "check:types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^_dependencies"]
    }
  }
}
